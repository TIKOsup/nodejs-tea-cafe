<!DOCTYPE html>
<html lang="en">

<%- include('layouts/index_page/head') -%>

<body>
<div class="container">

    <%- include('layouts/index_page/header') -%>

    <div class="main-content">
        <section class="section">
            <h2 class="section-header">Settings</h2>
            <form id="settings" action="/profile/settings/save" method="post" class="settings-section" enctype="multipart/form-data">
                <div><label for="username" class="settings-field settings-label-username">Change Username:</label></div>
                <div><input class="settings-field" id="username" type="text" value="<%= user.username %>" name="username"></div>

                <div><label for="profile-pic" class="settings-field settings-label-profile-pic">Change Profile Picture:</label></div>
                <div><img class="settings-field settings-profile-pic" src="<%= user.profilePic %>" alt="profile picture"></div>
                <div><input class="settings-field" id="profile-pic" type="file" name="profilePic"></div>
            </form>
            <input class="btn btn-primary settings-done" form="settings" type="submit" value="Save">
        </section>

        <hr/>

        <!-- Talk to us -->
        <%- include('layouts/index_page/talk_to_us') -%>
    </div>
</div>

<!-- Footer -->
<%- include('layouts/index_page/footer') -%>

<%- include('layouts/index_page/script') -%>

</body>
</html>
