<!DOCTYPE html>
<html lang="en">

<%- include('layouts/index_page/head') -%>

<body>
<div class="container">

    <%- include('layouts/index_page/header') -%>

    <div class="main-content">
        <section class="section">
        </section>

        <section class="section">
            <h2 class="section-header">Order</h2>
            <div class="responsive-table">

                <table>
                    <tr class="tr-header">
                        <th>&nbspTea</th>
                        <th>Price</th>
                        <th>Quantity</th>
                    </tr>

                    <% for (var i = 0; i < order.items.length; i++) { %>
                        <tr class="menu-item">
                            <td class="menu-item-title"><%= order.items[i].title %></td>
                            <td class="menu-item-price"><%= order.items[i].price %></td>
                            <td class="menu-item-quantity"><%= order.items[i].quantity %></td>
                        </tr>
                    <% } %>
                    <tr>
                        <td></td>
                        <td class="cart-total-title">Total</td>
                        <td class="cart-total-price"><%= order.total %></td>
                    </tr>
                </table>

            </div>
        </section>

        <hr />

        <!-- Talk to us -->
        <%- include('layouts/index_page/talk_to_us') -%>
    </div>
</div>

<!-- Footer -->
<%- include('layouts/index_page/footer') -%>

<%- include('layouts/index_page/script') -%>

</body>
</html>
