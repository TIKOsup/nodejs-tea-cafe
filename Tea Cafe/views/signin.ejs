<!DOCTYPE html>
<html lang="en">

<%- include('layouts/index_page/head') -%>

<body>
<div class="container">

    <%- include('layouts/index_page/header') -%>

    <div class="main-content">
        <section class="section">
            <h2 class="section-header" style="font-size: 30px"><b>Sign In</b></h2>
            <form action="/users/signin" method="post" class="signin">
                <div class="field">
                    <input autocomplete="off" type="email" placeholder="Email Address" id="email" name="email">
                </div>
                <div class="field">
                    <input autocomplete="off" type="password" placeholder="Password" id="password" name="password">
                </div>
                <div class="pass-link"><a href="#">Forgot password?</a></div>
                <div class="field">
                    <input type="submit" value="Login">
                </div>
                <div class="signup-link">Not registered? <a href="/auth/signup">Signup now</a></div>
            </form>
        </section>

        <hr />
    </div>
</div>

<!-- Footer -->
<%- include('layouts/index_page/footer') -%>

<%- include('layouts/index_page/script') -%>

</body>
</html>
